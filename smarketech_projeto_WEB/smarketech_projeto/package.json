{
    "name": "smarketech",
    "version": "1.0.0",
    "description": "Sistema de gerenciamento de produtos e autenticação de administradores",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "swagger": "node -e \"console.log('Documentação Swagger disponível em http://localhost:3000/api-docs')\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:integration": "jest --testPathPattern=\".*\\.integration\\.test\\.js$\"",
        "test:unit": "jest --testPathPattern=\".*\\.unit\\.test\\.js$\"",
        "test": "jest --verbose",
        "test:unit": "jest --testPathPattern=\"tests/unit\" --verbose",
        "test:integration": "jest --testPathPattern=\"tests/integration\" --verbose",
        "test:coverage": "jest --coverage --verbose",
        "test:watch": "jest --watch --verbose"
        
    },
    "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "maxWorkers": 1,
    "testTimeout": 30000
    },
    "dependencies": {
        "bcrypt": "^5.1.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-rate-limit": "^6.7.0",
        "helmet": "^7.0.0",
        "jsonwebtoken": "^9.0.0",
        "pg": "^8.10.0",
        "swagger-jsdoc": "^6.2.5",
        "swagger-ui-express": "^4.6.0"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "jest": "^30.1.3",
        "nodemon": "^3.1.10",
        "supertest": "^7.1.4"
    },
    "keywords": [
        "nodejs",
        "express",
        "postgresql",
        "jwt",
        "authentication",
        "product-management",
        "swagger",
        "api-documentation"
    ],
    "author": "Equipe Smarketech",
    "license": "MIT"
}
