<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faça seu Pedido"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="@color/white" />

        <!-- Item 1 - -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/item_background"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_apple"
                android:contentDescription="Maçã" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Refrigerante"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$ 5,99"
                    android:textSize="16sp"
                    android:textColor="@color/price_color"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/item1_remove"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="-"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/item1_quantity"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/item1_add"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="+"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Item 2 - -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/item_background"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_banana"
                android:contentDescription="Salgadinho" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salgadinho"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$ 7,50"
                    android:textSize="16sp"
                    android:textColor="@color/price_color"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/item2_remove"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="-"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/item2_quantity"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/item2_add"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="+"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Item 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/item_background"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_orange"
                android:contentDescription="Laranja" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chocolate"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$ 4,25"
                    android:textSize="16sp"
                    android:textColor="@color/price_color"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/item3_remove"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="-"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/item3_quantity"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/item3_add"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="+"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Carrinho"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>